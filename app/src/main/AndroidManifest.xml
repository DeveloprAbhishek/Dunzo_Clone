<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dunzoclone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DunzoClone">
        <activity android:name=".Activities.ProductActivity" />
        <activity android:name=".Activities.StoresActivity" />
        <activity android:name=".Activities.LocationActivity" />
        <activity android:name=".Activities.StoreCategoryActivity" />
        <activity android:name=".Activities.CartActivity"/>
        <activity android:name=".Activities.EmptyCartActivity" />
        <activity android:name=".Activities.ProductDetailActivity" />
        <activity android:name=".Activities.OrderDetailsActivity" />
        <activity android:name=".Activities.OrderActivity" />
        <activity android:name=".Activities.AdminActivity" />
        <activity android:name=".Activities.HomeActivity"/>
        <activity android:name=".Activities.VerifyMobileActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_RDw06iKDxiNYZu" />

        <meta-data
            android:name="com.google.gms.wallet.api.enabled"
            android:value="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>